{
    "parser": "babel-eslint",
    "env": {
        "browser": true
    },
    "plugins": [
        "react"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "rules": {
        "indent": [
            "error", 4
        ],
        "no-multiple-empty-lines": [
            "error",
            {
                "max": 1
            }
        ],
        "no-unused-vars": [
            "error",
            {
                "ignoreRestSiblings": true
            }
        ],
        "react/prop-types": [
            "error",
            {
                "ignore": [
                    "navigation",
                    "screenProps"
                ]
            }
        ]
    },
    "globals": {
        "require": false
    },
    "settings": {
        "react": {
            "pragma": "React",
            "version": "16.3.1"
        }
    }
}
